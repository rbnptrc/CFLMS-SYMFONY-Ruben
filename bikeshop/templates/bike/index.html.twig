{% extends 'base.html.twig' %}


{% block body %}

{#<!--<img src="../img/bike1.jpg">--->#}
<h2 class= "mt-3 mb-3 text-center"> Latest bikes </h2>
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-5 mx-2 justify-content-around">

  {% for bike in bikes %} {# making a loop in twig inside the variable bikes #}

   <div class="card" >
       <img src="{{bike.image}}" class="card-img-top" alt="">
        <div class="card-body">
           <h5 class="card-header">{{bike.brand}}</h5> {# the name of the bike #}
           <p class="card-text">Model: {{bike.model}}</p> {# the model of the bike #}
           <p class="card-text">Color: {{bike.color}}</p> {# the color of the bike #}
           <p class="card-text">Availability: {{bike.availability}}</p>
         <p class="card-text">Rent Date:{{bike.startDate|date('F j, Y, g:i a')}}</p>
          <p class="card-text">Return Date: {{bike.returnDate|date('F j, Y, g:i a')}}</p>
           <a href="/details/{{bike.id}}" class="btn btn-success">View</a> {# a tag to go to the path /details/{{bike.id}} so we send the id of the record with the path (like when we are using get method ) #}
                   
           <a href="/edit/{{bike.id}}" class="btn btn-info">Edit</a>
           <a href="/delete/{{bike.id}}" class="btn btn-danger">Delete</a>        
        
        </div><br>
    </div>
{% endfor %}
   </div>
   <br>
   <br>
{% endblock %}
